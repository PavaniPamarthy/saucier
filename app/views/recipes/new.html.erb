<div class="booyah-box col-10 offset-1">
  <h1>Enter Your Recipe Details</h1>
  <%= simple_form_for @recipe do |f| %>
    <%= f.input :title %>
    <%= f.input :ingredients %>
    <%= f.input :method %>
    <%= f.input :author %>
    <br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>